{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
    {% if showCatalogAddCategory %}
		<div class="btn-toolbar pull-right">
			<div class="btn-group" role="group">
                {{ macro.buttonIcon( geturl('AddCategory'), 'plus-square', 'lbl.Add'|trans|ucfirst) }}
			</div>
		</div>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="content-block content-block-p">
        {{ form_start(filterCategory) }}
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="category" class="control-label">{{ 'lbl.ShowOnlyCategoriesUnderCategory'|trans|ucfirst }}</label>
                    {{ form_widget(filterCategory.category) }}
                </div>
            </div>
            <div class="col-md-8">
                <div class="btn-toolbar">
                    <div class="btn-group pull-right">
                        <button id="search" type="submit" class="btn btn-primary" name="search">
                            <span class="fa fa-refresh"></span>&nbsp;
                            {{ 'lbl.UpdateFilter'|trans|ucfirst }}
                        </button>
                    </div>
                </div>
            </div>
        </div>


        {{ form_end(filterCategory) }}
    </div>

    {{ macro.dataGrid(dataGrid) }}
{% endblock %}
