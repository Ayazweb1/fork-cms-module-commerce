{% extends '/Layout/Templates/base.html.twig' %}

{% block content %}
  {{ form_start(form) }}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabContent" aria-controls="tabContent" role="tab"
               data-toggle="tab">{{ 'lbl.Content'|trans|ucfirst }}</a>
          </li>
          <li role="presentation">
            <a href="#tabValues" aria-controls="tabValues" role="tab"
               data-toggle="tab">{{ 'lbl.Values'|trans|ucfirst }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="row">
              <div class="col-md-8">
                {{ form_row(form.title) }}
                {{ form_row(form.type) }}
                {{ form_row(form.placeholder) }}
              </div>
              <div class="col-md-4">
                <div class="panel form-group panel-default">
                  <div class="panel-heading">{{ 'lbl.MetaData'|trans|ucfirst }}</div>
                  <div class="panel-body">
                    {{ form_row(form.required) }}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabValues">
            <div class="row">
              <div class="col-md-12">
                <p>{{ 'msg.CannotAddProductOptionValuesWhenCreatingANewProductOption'|trans }}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="fa fa-plus-square"></span>&nbsp;
            {{ 'lbl.Add'|trans|ucfirst }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
