{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
  {% if showCatalogAdd %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon( geturl('Add'), 'plus-square', 'lbl.Add'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  <div class="content-block content-block-p">
    {{ form_start(form) }}
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          {{ form_label(form.category) }}
          {{ form_widget(form.category) }}
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          {{ form_label(form.sku) }}
          {{ form_widget(form.sku) }}
        </div>
      </div>
      <div class="col-md-4">
        &nbsp;
        <div class="btn-toolbar">
          <div class="btn-group pull-right">
            <button id="search" type="submit" class="btn btn-primary" name="search">
              <span class="fa fa-refresh"></span>&nbsp;
              {{ 'lbl.UpdateFilter'|trans|ucfirst }}
            </button>
          </div>
        </div>
      </div>
    </div>
    {{ form_end(form) }}
  </div>

  {{ macro.dataGrid(dataGrid) }}
{% endblock %}
