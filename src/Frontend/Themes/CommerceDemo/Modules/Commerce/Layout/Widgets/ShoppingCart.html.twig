<a href="{{ geturlforblock('Commerce', 'Cart') }}" class="js-cart-nav-button | flex flex-row" title="Shopping Cart" >
    <svg class="c-cart-button-widget__icon | h-6 w-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
    </svg>
    <span class="sr-only">{{ 'lbl.Cart'|trans|ucfirst }}</span>
        <span
            class="c-cart-button-widget__badge | {% if cart.totalQuantity == 0 %}hidden{% endif %} bg-yellow-500 leading-none text-center inline-flex min-w-[24px] min-h-[24px] rounded-full text-sm font-bold justify-center items-center ml-2 px-1"
            data-cart-total-quantity
        >
            {{ cart.totalQuantity }}
        </span>
</a>
