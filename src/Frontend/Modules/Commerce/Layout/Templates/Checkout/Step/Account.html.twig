{% form_theme accountForm with ["Commerce/Layout/Templates/FormHelper.html.twig", "Commerce/Layout/Templates/Checkout/Step/_partials/FormHelper.html.twig"] %}

{{ form_start(accountForm, {attr: {novalidate: 'novalidate'}}) }}
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary panel-checkout">
      <div class="panel-heading">
        <h4 class="panel-title">{{ 'lbl.ContactDetails'|trans|ucfirst }}</h4>
      </div>
      <div class="panel-body">
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            <label class="m-0" for="account_customer_first_name">{{ 'lbl.Name'|trans|ucfirst }} *</label>
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.first_name) }}
                {{ form_errors(accountForm.first_name) }}
              </div>
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.last_name) }}
                {{ form_errors(accountForm.last_name) }}
              </div>
            </div>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.company_name) }}
          </div>
          <div class="col-md-8">
            {{ form_widget(accountForm.company_name) }}
            {{ form_errors(accountForm.company_name) }}
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.email_address) }}
          </div>
          <div class="col-md-8">
            {{ form_widget(accountForm.email_address) }}
            {{ form_errors(accountForm.email_address) }}
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.password) }}
            <p class="small">({{ 'lbl.Optional'|trans|ucfirst }})</p>
          </div>
          <div class="col-md-8">
            {{ form_widget(accountForm.password) }}
            {{ form_errors(accountForm.password) }}
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.phone) }}
          </div>
          <div class="col-md-8">
            {{ form_widget(accountForm.phone) }}
            {{ form_errors(accountForm.phone) }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-primary panel-checkout">
      <div class="panel-heading">
        <h4 class="panel-title">{{ 'lbl.AddressDetails'|trans|ucfirst }}</h4>
      </div>
      <div class="panel-body">
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.shipment_address.zip_code) }}
          </div>
          <div class="col-md-8">
              {{ form_widget(accountForm.shipment_address.zip_code) }}
              {{ form_errors(accountForm.shipment_address.zip_code) }}
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.shipment_address.house_number) }}
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-md-6">
                {{ form_widget(accountForm.shipment_address.house_number) }}
                {{ form_errors(accountForm.shipment_address.house_number) }}
              </div>
              <div class="col-md-6">
                {{ form_widget(accountForm.shipment_address.house_number_addition) }}
                {{ form_errors(accountForm.shipment_address.house_number_addition) }}
              </div>
            </div>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            <label class="required" for="account_customer_shipment_address_street">
              {{ 'lbl.Street'|trans|ucfirst }} + {{ 'lbl.City'|trans|ucfirst }}
            </label>
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.shipment_address.street) }}
                {{ form_errors(accountForm.shipment_address.street) }}
              </div>
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.shipment_address.city) }}
                {{ form_errors(accountForm.shipment_address.city) }}
              </div>
            </div>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-end align-items-center">
            {{ form_label(accountForm.shipment_address.country) }}
          </div>
          <div class="col-md-8">
            {{ form_widget(accountForm.shipment_address.country) }}
            {{ form_errors(accountForm.shipment_address.country) }}
          </div>
        </div>
        <div class="row form-group">
          <div class="offset-md-4 col-md-8">
            {{ form_widget(accountForm.same_invoice_address, {attr : {'data-toggle' : '.invoice_address', 'data-toggle-class' : 'd-none'}}) }}
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-primary panel-checkout invoice_address {% if cart.invoiceAddress is null %}d-none{% endif %}">
      <div class="panel-heading">
        <h4 class="panel-title">{{ 'lbl.InvoiceAddress'|trans|ucfirst }}</h4>
      </div>
      <div class="panel-body">
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            <label class="m-0">{{ form_label(accountForm.invoice_address.zip_code) }}</label>
          </div>
          <div class="col-md-8">
                {{ form_widget(accountForm.invoice_address.zip_code) }}
                {{ form_errors(accountForm.invoice_address.zip_code) }}
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            {{ form_label(accountForm.invoice_address.house_number) }}
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.invoice_address.house_number) }}
                {{ form_errors(accountForm.invoice_address.house_number) }}
              </div>
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.invoice_address.house_number_addition) }}
                {{ form_errors(accountForm.invoice_address.house_number_addition) }}
              </div>
            </div>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-md-end align-items-center">
            <label>
              {{ 'lbl.Street'|trans|ucfirst }} + {{ 'lbl.City'|trans|ucfirst }}
            </label>
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.invoice_address.street) }}
                {{ form_errors(accountForm.invoice_address.street) }}
              </div>
              <div class="col-6 col-md-6">
                {{ form_widget(accountForm.invoice_address.city) }}
                {{ form_errors(accountForm.invoice_address.city) }}
              </div>
            </div>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4 d-flex justify-content-end align-items-center">
            {{ form_label(accountForm.invoice_address.country) }}
          </div>
          <div class="col-md-8">
            {{ form_widget(accountForm.invoice_address.country) }}
            {{ form_errors(accountForm.invoice_address.country) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 text-right">
    <button type="submit" class="btn btn-default" id="checkout-account"
            data-checkout-step="address">{{ 'lbl.Continue'|trans|ucfirst }}</button>
  </div>
</div>
{{ form_end(accountForm) }}
